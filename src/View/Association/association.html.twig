{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/asso.css">
{% endblock %}
{% block content %}
	<header class="header">
		<h1>L'association</h1>
	</header>
	<main class="container">
		<section>
			<p class="assoParagraph">
				L’Abeille olivétaine est une association loi 1901
								qui a pour but de promouvoir la connaissance des abeilles auprès du grand public.
							    Elle travaille également en relation avec les apiculteurs.
			</p>
		</section>
		<section>
			<h2>Tous les évènements</h2>
			<div class="grid">
				{% for event in events %}
					<article>
						<img class="image" src="{{event.image ?? 'assets/images/placeholder.jpg'}}" alt="Apiculteurs et ruches">
						<div class="card">
							<h2>
								{{event.name}}</h2>
							<p>{{event.location}}</p>
							<p class="date">
								<svg class="svgView" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewbox="0 0 16 16">
									<path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"/>
									<path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
								</svg>
								{{date(event.date)|date("d/m/Y")}}</p>
							<p>
								{{event.description}}</p>
						</div>
					</article>
				{% endfor %}
			</div>
		</section>
	</main>
{% endblock %}
