{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/asso.css">
{% endblock %}
{% block content %}
	<header class="header">
		<h1>L'association</h1>
	</header>
	<main class="container">
		<section>
			<p class="assoParagraph">
				L’Abeille olivétaine est une association loi 1901
								qui a pour but de promouvoir la connaissance des abeilles auprès du grand public.
							    Elle travaille également en relation avec les apiculteurs.
			</p>
		</section>
		<section>
			<h2>Tous les évènements</h2>
			<div class="grid">
				{% for event in events %}
					<article>
						<img class="image" src="{{event.image ?? 'assets/images/placeholder.jpg'}}" alt="Apiculteurs et ruches">
						<div class="card">
							<h2>
								{{event.name}}</h2>
							<p class="lieu">
								<svg class="svgView" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 16 16">
									<path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
									<path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
								</svg>
								{{event.location}}</p>
							<p class="date">
								{{date(event.date)|date("d/m/Y")}}</p>
							<p>
								{{event.description}}</p>
						</div>
					</article>
				{% endfor %}
			</div>
		</section>
	</main>
{% endblock %}
