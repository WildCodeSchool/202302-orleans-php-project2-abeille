{% extends 'layout.html.twig' %}
{% block title %}
	{{parent()}}
	| Lien | Ajout
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}
{% block navbar %}{% endblock %}
{% block content %}

	<main class="container">
		<h1>Ajouter un lien</h1>
		<ul class="errors">
			{% for error in errors %}
				<li>
					{{ error }}
				</li>
			{% endfor %}
		</ul>
		<form action="" method="POST">

			<label for="name">Nom du site</label>
			<input type="text" id="name" name="name" required value=" {{ link.name }}">

			<label for="webAdress">URL du site</label>
			<input type="url" id="webAdress" name="webAdress" required value=" {{ link.webAdress }}">
			<button>Ajouter</button>
		</form>

		<a href="/admin/lien">Retour</a>
	</main>
	<a class="return" role="button" href="/admin">Retour</a>
{% endblock %}

{% block footer %}{% endblock %}
