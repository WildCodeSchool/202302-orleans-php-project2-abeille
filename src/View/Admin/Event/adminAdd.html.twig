{% extends 'layout.html.twig' %}
{% block title %}
	{{parent()}}
	| Faq | Ajout
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/adminfaq.css">
{% endblock %}
{% block navbar %}{% endblock %}
{% block content %}
	<main class="container">
        <h1>Ajouter Ã‰venements</h1>
        <ul>
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        <form action="" method="post">
            <label for="name">Nom</label>
            <input type="text" name="name" id="name" value="{{ event.name }}" required></input>

            <label for="location">Location</label>
            <input type="text" name="location" id="location" value="{{event.location}}"required>

            <label for="date">Date</label>
            <input type="date" name="date" id="date" value="{{event.date}}"required>

            <label for="description">Description</label>
            <textarea type="text" name="description" id="description" required>{{ event.description }}</textarea>

            <button>Ajouter</button>
        </form>
        <a href="/admin/event/index">Retour</a>
    </main>
{% endblock %}
{% block footer %}{% endblock %}
