{% extends 'layout.html.twig' %}
{% block title %}
	{{parent()}}
	Admin|Images
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}
{% block navbar %}{% endblock %}
{% block content %}
	<main class="container">
		<h1>Liste des Images</h1>
		<a role="button" href="/admin/image/ajouter" >Ajouter</a>
		<table>
			<thead>
				<tr>
					<th>Nom</th>
					<th>Date</th>
				</tr>
			</thead>
			<tbody>
				{% for picture in pictures %}
					<tr>
						<td>{{picture.name}}</td>
						<td>{{picture.date}}</td>
						<td class="btn-add-suppr">
							<form action="/admin/image/supprimer?id={{ picture.id }}" method="POST">
								<button class="outline" name="id">Supprimer</button>
							</form>
							<a role="button" href="/admin/image/modifier?id={{ picture.id }}" >Modifier</a>
						</td>
					</tr>
				{% endfor %}
				<a role="button" href="/admin">Retour</a>
			</tbody>
		</table>
	</main>
{% endblock %}
{% block footer %}{% endblock %}
