{% extends 'layout.html.twig' %}
{% block title %}
	{{parent()}}
	Admin|Images
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/adminimage.css">
{% endblock %}
{% block navbar %}{% endblock %}
{% block content %}
	<main class="container">
		<h1>Liste des Images</h1>
		<table>
			<thead>
				<tr>
					<th>Nom</th>
					<th>Date</th>
				</tr>
			</thead>
			<tbody>
				{% for picture in pictures %}
					<tr>
						<td>{{picture.name}}</td>
						<td>{{picture.date}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
{% block footer %}{% endblock %}
